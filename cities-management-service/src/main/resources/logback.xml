<configuration> 
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">    	
    	<encoder>
			<pattern>%d{ISO8601} %5p: [%t] - %X{RequestId} Cities path service: %m%n</pattern>
    	</encoder>
  	</appender>
	
	<logger name="org.apache">
		<level value="WARN" />
	</logger>
	
	<logger name="org.springframework.boot">
		<level value="INFO" />
	</logger>		
	
	<logger name="org.springframework.security">
		<level value="DEBUG" />
	</logger>
	
	<root level="INFO">          
    	<appender-ref ref="CONSOLE" />
  	</root>  
  
</configuration>